<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.nycjrcalendarv1.EventDetails">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/smalllogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Event Selected"
        android:id="@+id/txtEventDetails"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgLogo"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_alignEnd="@+id/imgLogo" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/imgAddress"
        android:layout_below="@+id/txtEventDetails"
        android:paddingRight="5dp"
        android:src="@drawable/address" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Event Selected"
        android:id="@+id/txtVenueAddress"
        android:layout_below="@+id/txtEventDetails"
        android:layout_toRightOf="@+id/imgAddress"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/imgSubway"
        android:layout_below="@+id/txtVenueAddress"
        android:paddingRight="5dp"
        android:src="@drawable/subway" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Event Selected"
        android:id="@+id/txtTransportation"
        android:layout_below="@+id/txtVenueAddress"
        android:layout_toRightOf="@+id/imgSubway"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/imgPhone"
        android:layout_below="@+id/txtTransportation"
        android:paddingRight="5dp"
        android:src="@drawable/phone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Event Selected"
        android:id="@+id/txtPhone"
        android:layout_below="@+id/txtTransportation"
        android:layout_toRightOf="@+id/imgPhone"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/imgWebpage"
        android:layout_below="@+id/txtPhone"
        android:paddingRight="5dp"
        android:src="@drawable/webpage" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Event Selected"
        android:id="@+id/txtWebsite"
        android:layout_below="@+id/txtPhone"
        android:layout_toRightOf="@+id/imgWebpage"
        android:textSize="16sp"
        android:autoLink="web"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/btnArtists"
        android:id="@+id/btnEvents"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/btnVenues"
        android:id="@+id/btnVenues"
        android:layout_alignTop="@+id/btnEvents"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/btnDates"
        android:id="@+id/btnDates"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
